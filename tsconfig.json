{
  "compilerOptions": {
    "target": "ES2024",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@/*": ["./srv/*"],
      "@cds-models/*": ["./@cds-models/*"],
      "@models/*": ["./srv/models/*"],
      "@controllers/*": ["./srv/controllers/*"],
      "@services/*": ["./srv/services/*"],
      "@repositories/*": ["./srv/repositories/*"],
      "@factories/*": ["./srv/factories/*"]
    }
  },
  "include": ["srv"],
  "exclude": ["node_modules"]
}
