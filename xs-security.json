{
    "xsappname": "sales-order-backend",
    "tenant-mode": "dedicated",
    "description": "Security profile for Sales Order Backend app",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UUA user"
        },
        {
            "name": "$XSAPPNAME.admin",
            "description": "administrator user"
        },
        {
            "name": "$XSAPPNAME.read_only_user",
            "description": "ReadOnly user"
        }
    ],
    "attributes": [
        {
            "name": "groups",
            "description": "User groups",
            "valueType": "string",
            "valueRequired": false
        },
        {
            "name": "id",
            "description": "User id",
            "valueType": "string",
            "valueRequired": false
        }
    ],
    "role-templates":[
        {
            "name": "Token_Exchange",
            "description": "UAA",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "admin",
            "description": "Admin user",
            "attribute-references": [
                "groups",
                "id"
            ],
            "scope-references": [
                "$XSAPPNAME.admin"
            ]
        },
                {
            "name": "read_only_user",
            "description": "ReadOnly user",
            "attribute-references": [
                "groups",
                "id"
            ],
            "scope-references": [
                "$XSAPPNAME.read_only_user"
            ]
        }
    ]
}